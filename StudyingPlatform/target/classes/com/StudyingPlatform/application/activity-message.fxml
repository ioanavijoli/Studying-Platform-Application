<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.StudyingPlatform.controllers.ActivityMessageController">
   <children>
      <Region layoutX="340.0" layoutY="10.0" style="-fx-min-width: 2;" />
      <VBox alignment="TOP_CENTER" style="-fx-min-width: 330; -fx-max-width: 330;">
         <children>
            <VBox alignment="CENTER" style="-fx-min-width: 220; -fx-max-width: 220; -fx-background-color: #e3c5e6;">
               <children>
                  <Label fx:id="nameLabel" text="&lt;activity name&gt;" wrapText="true" />
                  <Label fx:id="timeLabel" text="&lt;time labe&gt;" wrapText="true" />
                  <Label fx:id="statusLabel" text="&lt;statusLabel&gt;" wrapText="true" />
                  <HBox alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onJoinButtonClick" style="-fx-background-color: #ffffff;" text="join" />
                        <Label fx:id="expiresAtLabel" text="  expires at 00:00" wrapText="true" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Region style="-fx-min-height: 2;" />
         </children>
      </VBox>
      <Region layoutX="340.0" layoutY="10.0" style="-fx-min-width: 2;" />
   </children>
</HBox>
