<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.StudyingPlatform.controllers.AddActivityController">
   <children>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" style="-fx-pref-height: 15;">
         <children>
            <Label prefHeight="18.0" prefWidth="98.0" text="New Activity:" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="33.0" prefHeight="41.0" prefWidth="300.0" style="-fx-pref-height: 30;">
         <children>
            <Label prefHeight="34.0" prefWidth="43.0" text="Name" />
            <TextField fx:id="nameField" prefHeight="26.0" prefWidth="128.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="31.0" prefWidth="97.0" style="-fx-pref-height: 30;">
         <children>
            <DatePicker fx:id="datePicker" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="34.0" prefWidth="300.0" style="-fx-pref-height: 30;">
         <children>
            <Label prefHeight="26.0" prefWidth="92.0" text="Starts at:" />
            <Spinner fx:id="activityStartSpinner" editable="true" prefHeight="25.0" prefWidth="48.0" style="-fx-pref-width: 60;" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="26.0" prefWidth="300.0" style="-fx-pref-height: 30;">
         <children>
            <Label prefHeight="26.0" prefWidth="92.0" text="Ends at:" />
            <Spinner fx:id="activityEndSpinner" editable="true" prefHeight="25.0" prefWidth="48.0" style="-fx-pref-width: 60;" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="26.0" prefWidth="300.0" style="-fx-pref-height: 30;">
         <children>
            <Label prefHeight="26.0" prefWidth="92.0" text="min Participants" />
            <Spinner fx:id="capacitySpinner" editable="true" prefHeight="25.0" prefWidth="48.0" style="-fx-pref-width: 60;" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="147.0" prefHeight="26.0" prefWidth="300.0" style="-fx-pref-height: 30;">
         <children>
            <Label prefHeight="26.0" prefWidth="92.0" text="expires in(hours)" />
            <Spinner fx:id="expireSpinner" editable="true" prefHeight="25.0" prefWidth="48.0" style="-fx-pref-width: 60;" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" layoutX="10.0" layoutY="126.0" prefHeight="40.0" prefWidth="300.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="97.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onCancelButtonClick" style="-fx-pref-width: 70;" text="Cancel" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="69.0" layoutY="10.0" prefHeight="31.0" prefWidth="97.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onScheduleButtonClick" style="-fx-pref-width: 70;" text="Schedule" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
</VBox>
